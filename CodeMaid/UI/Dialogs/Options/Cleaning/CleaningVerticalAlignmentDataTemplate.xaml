<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:p="clr-namespace:SteveCadwallader.CodeMaid.Properties"
        xmlns:local="clr-namespace:SteveCadwallader.CodeMaid.UI.Dialogs.Options.Cleaning">
    <DataTemplate DataType="{x:Type local:CleaningVerticalAlignmentViewModel}">
        <StackPanel>
            <TextBlock Text="{x:Static p:Resources.VerticallyAlign}" Margin="5,5,5,0" />
            <WrapPanel Margin="35,0,5,10">
                <ToggleButton Content="assignments" IsChecked="{Binding VerticallyAlignAfterAssignments}" />
                <ToggleButton Content="types and modifiers" IsChecked="{Binding VerticallyAlignAfterTypesAndModifiers}" />
            </WrapPanel>
        </StackPanel>
    </DataTemplate>
</ResourceDictionary>